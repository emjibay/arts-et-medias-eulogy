{% set baseURL = "https://arts-et-medias.net/" %}
{% set heroImageURL = "/images/aem-eulogy-hero.jpg" %}


<!doctype html>

<html lang="{{ i18n.global.lang }}">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" >
    <title>{{ i18n.global.siteTitle }}</title>

    <meta property="website" content="{{ baseURL }}" />
    <meta property="description" content="{{ i18n.global.siteDescription }}" />

    <meta property="og:title" content="{{ i18n.global.siteTitle }}" />
    <meta property="og:description" content="{{ i18n.global.siteDescription }}" />
    <meta property="og:image" content="{{ baseURL }}{{ heroImageURL }}" />
    <meta property="og:image:secure_url" content="{{ baseURL }}{{ heroImageURL }}" />
    <meta property="og:url" content="{{ baseURL }}" />
    <meta property="og:site_name" content="{{ i18n.global.siteTitle }}" />
    <meta property="og:locale" content="{{ i18n.global.lang }}_CA" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@arts_et_medias" />
    <meta name="twitter:title" content="{{ i18n.global.siteTitle }}" />
    <meta name="twitter:description" content="{{ i18n.global.siteDescription }}" />
    <meta name="twitter:image:src" content="{{ baseURL }}{{ heroImageURL }}" />

    {% include "meta/fonts.njk" %}
    <link rel="stylesheet" href="/styles/aem-eulogy.css">
  </head>

  <body>
    {% include "components/header.njk" %}
    <div class="body">
      <main class="main-content content">
        <article>
          <h1 class="h1">{{ i18n.home.title }}</h1>
          <dl>
            <dt class="sr-only">{{ i18n.home.author }}</dt>
            <dd>
              <a class="author" href="https://mat.jansonblanchet.com/">Mat Janson Blanchet</a>
            </dd>
            <dt class="sr-only">{{ i18n.home.publicationDateLabel }}</dt>
            <dd class="publication-date">2023-03-11</dd>
          </dl>
          <img
            class="hero-image"
            src="/images/aem-eulogy-hero.jpg"
            alt="{{ i18n.home.heroAltText }}"
          >
          <div class="article-content">
            {% include i18n.home.partial ignore missing %}
          </div>
        </article>
      </main>
    </div>
    {% include "components/footer.njk" %}
  </body>

</html>
